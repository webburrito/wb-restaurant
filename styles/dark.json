{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "title": "Dark Mode",
  "settings": {
    "color": {
      "palette": [
        { "name": "Primary Red", "slug": "primary", "color": "#F5927E" },
        { "name": "Secondary Blue", "slug": "secondary", "color": "#7DD3ED" },
        { "name": "Text Light", "slug": "text", "color": "#F5F5F5" },
        { "name": "White", "slug": "white", "color": "#FFFFFF" },
        { "name": "Black", "slug": "black", "color": "#000000" },
        { "name": "Dark Background", "slug": "cream", "color": "#1A1A1A" },
        { "name": "Light Red", "slug": "red-light", "color": "#F5927E" },
        { "name": "Dark Red", "slug": "red-dark", "color": "#DF391C" },
        { "name": "Light Blue", "slug": "blue-light", "color": "#7DD3ED" },
        { "name": "Dark Blue", "slug": "blue-dark", "color": "#22B0D6" },
        { "name": "Gray Dark", "slug": "gray-light", "color": "#2B2B2B" },
        { "name": "Gray Medium", "slug": "gray-medium", "color": "#949494" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--cream)",
      "text": "var(--wp--preset--color--text)"
    },
    "elements": {
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--black)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--blue-light)"
          }
        }
      }
    }
  }
}
