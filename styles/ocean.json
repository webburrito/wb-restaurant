{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "title": "Ocean",
  "settings": {
    "color": {
      "palette": [
        { "name": "Primary Blue", "slug": "primary", "color": "#0EA5E9" },
        { "name": "Secondary Teal", "slug": "secondary", "color": "#14B8A6" },
        { "name": "Text Dark", "slug": "text", "color": "#164E63" },
        { "name": "White", "slug": "white", "color": "#FFFFFF" },
        { "name": "Navy", "slug": "black", "color": "#0C4A6E" },
        { "name": "Ice Blue", "slug": "cream", "color": "#F0F9FF" },
        { "name": "Sky Blue", "slug": "red-light", "color": "#7DD3FC" },
        { "name": "Deep Blue", "slug": "red-dark", "color": "#0369A1" },
        { "name": "Aqua", "slug": "blue-light", "color": "#5EEAD4" },
        { "name": "Teal Dark", "slug": "blue-dark", "color": "#0F766E" },
        { "name": "Cyan Light", "slug": "gray-light", "color": "#E0F2FE" },
        { "name": "Blue Gray", "slug": "gray-medium", "color": "#67E8F9" }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--cream)",
      "text": "var(--wp--preset--color--text)"
    },
    "elements": {
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--white)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary)"
          }
        }
      }
    }
  }
}
